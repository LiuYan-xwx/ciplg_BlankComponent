<ci:ComponentBase x:TypeArguments="local:BlankComponentSettings"
                  x:Class="ciplg_BlankComponent.BlankComponent"   
                  xmlns:ci="http://classisland.tech/schemas/xaml/core"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:ciplg_BlankComponent"
                  mc:Ignorable="d" 
                  d:DesignHeight="450" d:DesignWidth="800">
    <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:BlankComponent}}"
          Width="{Binding Settings.BlankWidth}">
    </Grid>
</ci:ComponentBase>
